/* pages/partner/index.wxss */
.top {
  display: flex;
  /* justify-content: center; */
  margin-top: -80rpx;
  font-size: 32rpx;
  font-weight: normal;
  color: rgba(255, 255, 255, 1);
  width: 100%;
  height: 390rpx;
  background: url("https://spmp.zg118.com/static-resources/indexBackground2.png") no-repeat;
  background-position-y: -110rpx;
  background-color: #fff;
  background-size: 100%;
}
.createTask {
  height: 220rpx;
  width: 666rpx;
  background: #fff;
  font-size: 26rpx;
  padding-top: 60rpx;
  padding-left: 40rpx;
  padding-right: 60rpx;
  box-sizing: border-box;
  /* margin: -150rpx auto 24rpx; */
  margin: -130rpx auto;
  border-radius: 10rpx;
  box-shadow: 0px 1px 9px 4px rgba(178, 178, 178, 0.24);
  display: flex;
  justify-content: space-around;
  font-weight: bold;
  color: #888;
  text-align: center;
}
.createTask view {
  text-align: center;
  height: 68rpx;
}
.panerName view:last-child{
  font-weight: bold
}
.panerName view:last-child > text {
  /* color:#9e */
}

.createTask view view:first-child {
  font-size: 36rpx;
  color: #268aed;
}
.mysCon {
  margin:20rpx 0;
  padding-top: 80rpx;
  padding-left:45rpx;
  display:flex;
  /* padding-left:20rpx; */
}
.mysCon>view>image {
  width:130rpx;
  height:130rpx;
  background: #f5f5f5;
  border-radius: 50%;
  margin-right:50rpx;
}
.mysCon > view:last-child{
  margin-top:10rpx;
}
.mysCon > view:last-child > view {
  margin-bottom:20rpx;
}
.mysCon > view:last-child > view:first-child{
  color:#fff;
  font-weight: 600;
  font-size:38rpx;
}
.mysCon > view:last-child > view:last-child{
  color:#fff;
  /* font-weight: bold; */
  font-size:28rpx;
}
.mysCon > view:last-child > view:last-child text {
  /* color:#9d9d9d; */
  font-weight: 600;
}
.myLists {
  margin-top:180rpx;
  background: #fff;
  padding: 0 20px;
}
.myLists .myLis {
  padding:15px 0;
    display: flex;
    justify-content: space-between;
}
.myLis {
  border-bottom:1rpx solid #e9e1ec;
}
.myLis:last-child{
  border:none;
}
.myLists image{
  width:32rpx;
  height:28rpx;
}
.myLis view >text {
  color:#000;
  font-size: 30rpx;
  font-weight: 600;
}
.myLis view:last-child{
  color:#0978f0;
  font-size: 32rpx;
  font-weight: bold;
}