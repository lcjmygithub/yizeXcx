.topContainar {
  margin: 30rpx 40rpx;
  padding-bottom: 40rpx;
  border-bottom: 2rpx solid #e1e1e1;
}

.topContainar image {
  width: 100rpx;
  height: 39rpx;
  float: right;
}

.topContainar text {
  color: #333;
  font-weight: bold;
}

.topContainar view {
  margin-top: 20rpx;
  color: #666;
  font-size: 26rpx;
  font-weight: bold;
}

.topContainar view text {
  color: #9d9d9d;
}

.bookCon {
  margin: 0 40rpx;
}

.bookCon view {
  color: #666;
  font-weight: bold;
  font-size: 26rpx;
  padding: 10rpx 0;
}

.bookCon view text {
  color: #0475f0;
}

.detailCall {
  display: flex;
  padding: 20rpx 0 20rpx 0;
  margin: 30rpx 40rpx;
  flex-wrap: wrap;
  border-top: 2rpx solid #f5f5f5;
  /* border-bottom:2rpx solid #f5f5f5; */
}

.detailCall>view {
  width: 24%;
  margin: 30rpx 0;
  text-align: center;
  border-right: 2rpx solid #f5f5f5;
}

.detailCall>view> view:first-child {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.detailCall>view> view:last-child {
  font-size: 34rpx;
  color: #0475f0;
  font-weight: bold;
}

.detailCall>view> view:last-child text {
  font-size: 26rpx;
}

.callList {
  /* padding:0 40rpx; */
}

.callList>view:first-child {
  background: #f5f5f5;
  padding: 20rpx;
}

.callList> view >text {
  color: #0c0c0c;
  font-weight: bold;
  font-size: 26rpx;
}

.callList .callTitle {
  padding: 20rpx 40rpx;
  display: flex;
  justify-content: space-around;
}

.callDeLiAll {
  padding: 30rpx 40rpx;
}

.callDeLi view:first-child {
  display: flex;
  justify-content: space-between;
}

