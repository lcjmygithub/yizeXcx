}

.number-block {
  width: 100%;
  background: #fff;
}

.number {
  padding: 40rpx 20rpx;
  margin: 0 30rpx;
  display: flex;
  border-bottom: 1px solid #e1e1e1;
}

.tips-right image {
  width: 23rpx;
  height: 19rpx;
}

.number-left {
  flex: 5;
}

.number-right {
  flex: 2;
  text-align: right;
  position: relative;
}

.number-right>.iclevelname {
  height: 42rpx;
  line-height: 42rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto 0;
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
  font-weight: 700;
  color: #0475f0;
  margin-top:0rpx;
}

.number-right>.rightIcon {
  width: 42rpx;
  height: 42rpx;
  line-height: 42rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto 0;
  border: 1px solid #e1e1e1;
  border-radius: 50%;
  text-align: center;
}

.isread {
  font-size: 28rpx;
  color: red;
  margin-left: 10rpx;
}

view.isread1 {
  color: #6c6c6c;
}

.number-right image {
  width: 10rpx;
  height: 20rpx;
  margin: auto 0;
}

.number-top {
  margin-bottom: 13rpx;
  display: flex;
}

.callRecord {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #6c6c6c;
  background: rgba(243, 243, 243, 1);
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.number-top .number-phone {
  font-size: 36rpx;
  color: #333;
  margin-right: 15rpx;
  font-weight: bold;
}

.number-top .number-type {
  font-size: 28rpx;
  line-height: 21rpx;
}

.nearerTime {
  font-size: 28rpx;
  color: #999;
}

._dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: red;
  margin-top: -2rpx;
}

